<% layout('/layouts/boilerplate') %>
<body>
    <div class="row mt-3">
    <div class="col-7 offset-2">
    <h3><b>Edit your Listing</b></h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form-label">Title:</label><br>
        <input type="text" name="listing[title]" value="<%= listing.title %>" placeholder="Title" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
        <label for="description" class="form-label">Description:</label><br>
        <textarea name="listing[description]" placeholder="Description" class="form-control" required><%= listing.description %></textarea>
        <div class="invalid-feedback">Please provide a short description.</div>
        </div>
        <div class="mb-3">
    <label for="image" class="form-label">Image URL:</label><br>
    <input type="text" name="listing[image]" value="<%= listing.image && listing.image.url ? listing.image.url : '' %>" placeholder="Image URL" class="form-control" required>
    <div class="invalid-feedback">Please provide an image URL.</div>
        </div>
        <div class="row">
        <div class="mb-3  col-md-4">
        <label for="price" class="form-label">Price:</label><br>
        <input type="number" name="listing[price]" value="<%= listing.price %>" placeholder="Price" class="form-control" required>
        <div class="invalid-feedback">Please provide a price.</div>
        </div>
        <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country:</label><br>
        <input type="text" name="listing[country]" value="<%= listing.country %>" placeholder="Country" class="form-control" required>
        <div class="invalid-feedback">Please provide a country.</div>
        </div>
        </div>
        <div class="mb-3">
        <label for="location" class="form-label">Location:</label><br>
        <input type="text" name="listing[location]" value="<%= listing.location %>" placeholder="Location" class="form-control" required>
        <div class="invalid-feedback">Please provide a location.</div>
        </div><br>
        <button type="submit" class="btn btn-dark add-btn btn0edit">Update Listing</button>
        <br><br>
    </form>
    
</body>
 </div>
  </div>
</html>